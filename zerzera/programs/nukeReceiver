tArgs = {...}

if  #tArgs == 0 then
   print('Usage: nukeReceiver [modem side] [monitor side]')
   return false
end

sModem   = tArgs[1]
sMonitor = tArgs[2]
sPort    = tonumber(tArgs[3])

if( sPort == nil) then sPort = 123 end

if not sModem or not sMonitor then print('Usage: nukeReceiver [modem side] [monitor side] {Listen port}') error() end

local p           = peripheral
local pModem      = p.wrap(sModem)
local pMonitor    = p.wrap(sMonitor)
local iBorder     = colors.white
local iBackground = colors.red
local iTextColor  = colors.white

local tParams     = {
  perc        = 10,
  EUStored    = 12345,
  EUCapacity  = 400000,
  status      = "off",
  label       = "nuke 1"
}

-- Initialize monitor
local xSize,ySize = pMonitor.getSize()
local top, right, bottom, left = math.ceil(ySize*0.25), xSize-1, ySize-1, 2

pMonitor.clear()
pMonitor.setCursorPos(1,1)
pMonitor.setTextScale(0.5)
pMonitor.setTextColor(iTextColor)
pMonitor.setBackgroundColor(colors.black)

-- Draw the border
for y=top, bottom do
    pMonitor.setBackgroundColor(iBorder)

    if y == top or y == bottom then
        for x=left, right do
            pMonitor.setCursorPos(x,y)
            pMonitor.write(" ")
        end
    end
    
    pMonitor.setCursorPos(left,y)
    pMonitor.write(" ")
    
    pMonitor.setCursorPos(right, y )
    pMonitor.write(" ")
    
    pMonitor.setBackgroundColor(colors.black)
end

-- Calculate center text
local tPercentage = tParams["perc"].."%"
local innerWidth  = (right - 1) - (left + 1);
local innerHeight = (bottom - 1) - (top + 1);
local margin = math.ceil((innerWidth - #tPercentage)/2)

-- Calculate starting point from the top
local yStart = innerWidth - math.floor( innerWidth / 100 * tParams["perc"])

-- Draw the background
for y=top+1, bottom-1 do
    pMonitor.setBackgroundColor(colors.black)
    if(y >= yStart) then
        pMonitor.setBackgroundColor(iBackground)
    end
    for x=left+1, right-1 do
      pMonitor.setCursorPos(x,y)
      pMonitor.write(" ")
    end
    pMonitor.setBackgroundColor(colors.black)
end

-- Write percentaged centered on background
pMonitor.setBackgroundColor(iBackground)
pMonitor.setTextColor(iTextColor)
pMonitor.setCursorPos(left+1+margin,yStart+1)
pMonitor.write(tPercentage)

-- Initialize modem
pModem.open(sPort)